{
  "name": "sunday-link",
  "version": "1.0.0",
  "description": "Smart link platform for music artists to track Spotify playlist performance and attribution",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently -k -n TYPECHECK,SERVER \"tsc --noEmit --watch\" \"nodemon --config nodemon.json\"",
    "dev:fast": "concurrently -k -n TYPECHECK,SERVER \"tsc --noEmit --watch\" \"tsx watch src/index.ts\"",
    "build": "tsc",
    "start": "node dist/scripts/migrate.js && node dist/index.js",
    "start:railway": "node server.js",
    "start:minimal": "node railway-ultra-minimal.js",
    "migrate": "node dist/scripts/migrate.js",
    "migrate:dev": "ts-node src/scripts/migrate.ts",
    "backup:sqlite": "node dist/scripts/backup-sqlite.js",
    "backup:sqlite:dev": "ts-node src/scripts/backup-sqlite.ts",
    "clear-tokens": "ts-node src/utils/clearInvalidTokens.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "railway": {
    "nodeVersion": "20",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 5000
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
