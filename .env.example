# Soundlink Environment Configuration
# Copy this file to .env and fill in your values

# Spotify App Configuration
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# OAuth Redirect URI
# Development: http://localhost:3000/auth/spotify/callback
# Production: https://yourdomain.com/auth/spotify/callback
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback

# Encryption Key (32 characters required)
# Generate a secure random string for production
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Database Configuration
DATABASE_PATH=./db/soundlink-lite.db

# Application Configuration
NODE_ENV=development
PORT=3000

# Optional: Logging Configuration
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Cache Configuration
CACHE_TTL_SECONDS=3600

# Optional: Security Configuration
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=*

# Optional: Monitoring (if using external services)
SENTRY_DSN=your_sentry_dsn_here
